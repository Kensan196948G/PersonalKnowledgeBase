{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-server-filesystem",
        "/mnt/LinuxHDD/PersonalKnowledgeBase"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-server-memory"
      ]
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-server-sqlite",
        "--db-path",
        "/mnt/LinuxHDD/PersonalKnowledgeBase/data/knowledge.db"
      ]
    }
  }
}
