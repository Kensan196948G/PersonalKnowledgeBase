{
  "name": "personal-knowledge-base",
  "version": "0.1.0",
  "description": "個人向けメモ・ナレッジベースシステム",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/backend/index.ts",
    "dev:frontend": "vite",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.backend.json",
    "start": "node dist/backend/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:backend": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects backend",
    "test:frontend": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects frontend",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:links": "tsx prisma/seed-links.ts",
    "db:check": "tsx scripts/check-db.ts",
    "db:test:links": "tsx scripts/test-links.ts",
    "db:verify": "tsx scripts/verify-schema.ts",
    "reset-frontend": "open scripts/reset-frontend.html?auto=true || xdg-open scripts/reset-frontend.html?auto=true || start scripts/reset-frontend.html?auto=true"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@tippyjs/react": "^4.2.6",
    "@tiptap/core": "^2.9.1",
    "@tiptap/extension-image": "^2.9.1",
    "@tiptap/extension-link": "^2.9.1",
    "@tiptap/extension-mention": "^2.27.1",
    "@tiptap/extension-placeholder": "^2.9.1",
    "@tiptap/extension-task-item": "^2.9.1",
    "@tiptap/extension-task-list": "^2.9.1",
    "@tiptap/html": "^2.27.1",
    "@tiptap/pm": "^2.9.1",
    "@tiptap/react": "^2.9.1",
    "@tiptap/starter-kit": "^2.9.1",
    "@types/d3": "^7.4.3",
    "@types/react-window": "^1.8.8",
    "adm-zip": "^0.5.16",
    "apache-arrow": "^14.0.2",
    "charset-detector": "^0.0.2",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "fuse.js": "^7.1.0",
    "iconv-lite": "^0.7.1",
    "jsdom": "^27.3.0",
    "mammoth": "^1.11.0",
    "multer": "^1.4.5-lts.1",
    "ollama": "^0.6.3",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.33.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-window": "^2.2.3",
    "tippy.js": "^6.3.7",
    "turndown": "^7.2.2",
    "vectordb": "^0.21.2",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/charset-detector": "^0.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/iconv-lite": "^0.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^1.4.12",
    "@types/natural": "^5.1.5",
    "@types/node": "^22.9.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.3",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^5.4.11"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
